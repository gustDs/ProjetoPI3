<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AutorizacaoFilter</filter-name>
        <filter-class>br.senac.sp.yolandasystem.filter.AutorizacaoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutorizacaoFilter</filter-name>
        <url-pattern>/protegido/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>protegido/ClientesServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.ClientesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CadastrarClienteServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.CadastrarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarVendaServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.CadastrarVendaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirClienteServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.ExcluirClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarClienteServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.AlterarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutosServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.ProdutosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarProdutosServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.CadastrarProdutosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirProdutosServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.ExcluirProdutosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarProdutosServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.AlterarProdutosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>protegido/ClientesVendasServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.ClientesProdutosVendasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendasServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.VendasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>protegido/RelatorioServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.RelatorioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>br.senac.sp.yolandasystem.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>protegido/ClientesServlet</servlet-name>
        <url-pattern>/protegido/ClientesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarClienteServlet</servlet-name>
        <url-pattern>/clientes/CadastrarClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarVendaServlet</servlet-name>
        <url-pattern>/venda/CadastrarVendaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirClienteServlet</servlet-name>
        <url-pattern>/ExcluirClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarClienteServlet</servlet-name>
        <url-pattern>/AlterarClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutosServlet</servlet-name>
        <url-pattern>/ProdutosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarProdutosServlet</servlet-name>
        <url-pattern>/produtos/CadastrarProdutosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirProdutosServlet</servlet-name>
        <url-pattern>/ExcluirProdutosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarProdutosServlet</servlet-name>
        <url-pattern>/AlterarProdutosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>protegido/ClientesVendasServlet</servlet-name>
        <url-pattern>/protegido/ClientesVendasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendasServlet</servlet-name>
        <url-pattern>/VendasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>protegido/RelatorioServlet</servlet-name>
        <url-pattern>/protegido/RelatorioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>protegido/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
